<% include ./partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">
    Edit <%= result.title %>
  </div>
  <form action="/blog/<%= result._id %>?_method=PUT" method="POST"
    class="ui form">
    <div class="field">
      <label>Blog Title</label>
      <input type="text" name="blog[title]" placeholder="Enter Title"
        value="<%= result.title %>">
    </div>
    <div class="field">
      <label>Blog Image</label>
      <input type="text" name="blog[img]" placeholder="Enter Image URL"
        value="<%= result.img %>">
    </div>
    <div class="field">
      <label>Blog Text</label>
      <textarea name="blog[body]"
        placeholder="Enter Blog Text"><%- result.body %></textarea>
    </div>
    <button type="submit" class="ui basic button orange big">Update</button>
  </form>
</div>

<% include ./partials/footer %>